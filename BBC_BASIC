5 REM PRETTY POINTLESS BUT FUN. MORE POINTS = BETTER ACCURACY
10 INSIDE=0
20 POINTS=1000
30 FOR I=1 TO POINTS
40 X=RND(1)
50 Y=RND(1)
60 RESULT =SQR(X*X+Y*Y)
65 PRINT RESULT
70 IF RESULT<=1 THEN 80 ELSE 90
80 INSIDE = INSIDE+1
90 NEXT I
100 PRINT INSIDE
104 PIE=(INSIDE/POINTS)*4
105 PRINT PIE
110 END
